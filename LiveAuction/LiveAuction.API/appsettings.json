{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Your Connection String"
  },
  "JWT": {
    "Key": "Your Secret key at least 32 char",
    "Issuer": "Your issuer name",
    "Audience": "Your audience name",
    "AccessTokenValidityInMinutes": 60,
    "RefreshTokenValidityInDays": 7
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedOrigins": [
    "http://localhost:3000",
    "http://localhost:4200",
    "https://mydomain.com"
  ],

  "EnableScalar": true,
  "SecurityHeaders": {
    "EnableHsts": false
  },

  "DomainUrl": "https://yourdomain.example",

  "MailSettings": {
    "Email": "your-email@gmail.com",
    "DisplayName": "Live Auction Support",
    "Password": "xxxx xxxx xxxx xxxx",
    "Host": "smtp.gmail.com",
    "Port": 587
  },

  "AppStatus": {
    "GlobalMinVersion": "1.0.0",
    "IsMaintenanceMode": false,
    "MaintenanceMessage": "The application is currently under maintenance. Please try again later.",
    "UpdateRequiredMessage": "A new version of the application is available. Please update to continue using the app.",
    "StoreUrlAndroid": "https://play.google.com/store/apps/details?id=example",
    "StoreUrliOS": "https://apps.apple.com/app/exampleID",
    "BannedVersions": "0.3.0, 0.3.1",
    "BannedMessage": "This version contains a technical issue and has been discontinued to protect your account. Please update immediately."
  }
}
